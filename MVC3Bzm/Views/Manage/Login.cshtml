@model MVC3Bzm.Models.Entity.Admins

@{
    ViewBag.Title = "登录";
}


@using (Html.BeginForm("Login", "Manage", FormMethod.Post)){
    <fieldset>
        <legend>管理员登录</legend>

        <div id="login">
            <div class="login_title">
                @Html.TextBox("username", "", new { @class = "login_input" })
            </div>

            <div class="login_title">
                @Html.Password("userpswd", "", new { @class = "login_input" })
            </div>

            <div class="login_title login_title_b">
                <input type="submit" class="login_button" value="登 录 >>" />
            </div>
        </div>
    </fieldset>
}

