@using MVC3Bzm.Models.Entity;

@{
    ViewBag.Title = "做梦也很累";
}

@{
    List<BZMArticle> list = ViewBag.List as List<BZMArticle>;

    foreach (BZMArticle art in list)
    {
        <div class='post_list'>
            <div class='post_title'>@Html.ActionLink(art.ArticleTitle, "Detail", new { id = art.ID }, new { target = "_blank" })</div>
            <div class='post_content'>@Html.Raw(@art.ArticleContent)</div>
            <div class='post_info'>
                @art.ArticleDate&nbsp;&nbsp;@art.BZMTag.TagName&nbsp;&nbsp;@art.ArticleAccess&nbsp&nbsp;
                @Html.ActionLink(art.BZMAdMIn.AdminName, "About", "", new { target = "_blank" })&nbsp;&nbsp;
                @Html.ActionLink("Tags", "Tags", "", new { target = "_blank" })
                &nbsp;&nbsp;推荐使用：<span aria-hidden="true" title="Chrome" class="icon-chrome"></span>
		        <span aria-hidden="true" title="Firefox" class="icon-firefox"></span>
		        <span aria-hidden="true" title="Opera" class="icon-opera"></span>
		        <span aria-hidden="true" title="Safari" class="icon-safari"></span>
		        <span aria-hidden="true" title="IE9+" class="icon-IE"></span>
                &nbsp;&nbsp;订阅：<a href="Home/Feed" style="text-decoration:none;" target="_blank"><span aria-hidden="true" title="订阅" style="color:#009933; cursor:pointer;" class="icon-feed"></span></a>
		        @*<span aria-hidden="true" class="icon-feed"></span>
		        <span aria-hidden="true" class="icon-home"></span>*@
            </div>
        </div>
    }
    
    <div id='next_page' class='post_list'>
        <div id="next_p" class='post_title'>加载下一页...</div>
        <input type="hidden" id="Hid_Page" value="10" />
    </div>
}

<script id="lists" type="text/html">
<% for (var i = 0; i < count; i ++) { %>
    <div class='post_list'>
    <div class='post_title'>
        <a href='Home/Detail/<%= list[0][i].ID %>' target='_blank' class='detail_a'><%= list[0][i].Title %></a></div>
    <div class='post_content'><%== list[0][i].Content %></div>
    <div class='post_info'><%= list[0][i].Date %>&nbsp;&nbsp;<%= list[0][i].TagName %>
    &nbsp&nbsp<%= list[0][i].Access %>
    &nbsp&nbsp<a href='Home/About' target='_blank' class='auth_a'><%= list[0][i].AdminName %></a>
    &nbsp&nbsp<a href='Home/Tags' target='_blank' class='auth_a'>Tags</a>
    &nbsp;&nbsp;订阅：<a href="Home/Feed" style="text-decoration:none;" target="_blank">
    <span aria-hidden="true" title="订阅" style="color:#009933; cursor:pointer;" class="icon-feed"></span></a>
    </div></div>
<% } %>
</script>